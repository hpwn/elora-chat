# Backend/worker configuration
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URL=
YOUTUBE_API_KEY=
PORT=8080
DEPLOYED_URL=https://localhost:8080/

# SQLite storage configuration
# ELORA_DB_MODE: ephemeral (default, temp file) | persistent
ELORA_DB_MODE=ephemeral
# ELORA_DB_PATH: leave blank for ephemeral mode; set a writable path when using persistent mode (e.g. ./data/elora-chat.db or /data/elora-chat.db)
ELORA_DB_PATH=
ELORA_DB_MAX_CONNS=16
ELORA_DB_BUSY_TIMEOUT_MS=5000
# Optional: extra pragmas applied on connection (comma-separated key=value pairs)
ELORA_DB_PRAGMAS_EXTRA=mmap_size=268435456,cache_size=-100000,temp_store=MEMORY
