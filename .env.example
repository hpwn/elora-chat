# Backend/worker configuration
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URL=
YOUTUBE_API_KEY=
PORT=8080
DEPLOYED_URL=https://localhost:8080/

# Storage configuration
# redis (default) | sqlite
ELORA_STORE=redis
# sqlite can run in "ephemeral" (default temp file) or "persistent" mode
ELORA_DB_MODE=ephemeral
# leave blank in ephemeral mode to use /tmp/elora-chat-<pid>.db
ELORA_DB_PATH=
# for persistent mode point this at a writable volume, e.g.:
# ELORA_DB_MODE=persistent
# ELORA_DB_PATH=./data/elora-chat/elora.db
ELORA_DB_MAX_CONNS=16
ELORA_DB_BUSY_TIMEOUT_MS=5000
ELORA_DB_PRAGMAS_EXTRA=mmap_size=268435456,cache_size=-100000,temp_store=MEMORY
