# Backend/worker configuration
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REDIRECT_URL=
YOUTUBE_API_KEY=
PORT=8080
DEPLOYED_URL=https://localhost:8080/

# Storage configuration
# redis (default) | sqlite
ELORA_STORE=redis
# ephemeral (default, auto temp file) | persistent
ELORA_DB_MODE=ephemeral
# Leave blank for ephemeral mode (temp file under /tmp).
# Persistent mode requires a writable path, e.g. ./data/elora-chat.db or /data/elora-chat.db when using a Docker volume.
ELORA_DB_PATH=
ELORA_DB_MAX_CONNS=16
ELORA_DB_BUSY_TIMEOUT_MS=5000
ELORA_DB_PRAGMAS_EXTRA=mmap_size=268435456,cache_size=-100000,temp_store=MEMORY
